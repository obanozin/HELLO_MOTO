

<body class="my-team-member-back">

  <%= render 'users/header' %>
  <%= render 'users/footer' %>
	<div class="team_member-main">
		<div>チームへ参加申請を送ろう!</div>


		<%= form_for([@team,@team_member]) do |f| %>

			<div>
				<%= f.hidden_field :team_id, :value => @team.id %>
			</div>

		    <div>
				<%= f.text_field :request_comment %>
			</div>
			<br><%= f.submit '申請を送る' %></br>

			<% end %>
	</div>
</body>

